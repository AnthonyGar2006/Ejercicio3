<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3.MainPage">

    <StackLayout Padding="30">
        <Label Text="Ingrese las 5 calificaciones del alumno:" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="txtN1" Placeholder="Nota 1" Keyboard="Numeric" />
        <Entry x:Name="txtN2" Placeholder="Nota 2" Keyboard="Numeric" />
        <Entry x:Name="txtN3" Placeholder="Nota 3" Keyboard="Numeric" />
        <Entry x:Name="txtN4" Placeholder="Nota 4" Keyboard="Numeric" />
        <Entry x:Name="txtN5" Placeholder="Nota 5" Keyboard="Numeric" />

        <Button Text="Promedio" Clicked="Button_Clicked" />

        <Label x:Name="lblPromedio" FontSize="20" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
